<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    >

    <com.ezmcom.offline.camera.PreviewSurfaceView
        android:id="@+id/preview_surface_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <com.ezmcom.offline.camera.OverlayView
        android:id="@+id/overlay_surface"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/preview_surface_view"
        android:layout_alignBottom="@+id/preview_surface_view"
        android:layout_alignStart="@+id/preview_surface_view"
        android:layout_alignEnd="@+id/preview_surface_view"
        />

</RelativeLayout>
